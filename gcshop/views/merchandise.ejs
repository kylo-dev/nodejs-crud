<% if (haveMerchandise) { %>
    <table class="table table-bordered ">

        <% var i = 0
             while (i<list.length) { %>
                <tr>
                    <td><img src="<%=list[i].image%>" style="width:100px;height:100px; "></td>
                    <td><%=list[i].name%></td>
                    <td>가격 : <%=list[i].price%></td>
                    <td>브랜드 : <%=list[i].brand%></td> 
                </tr>
        <% i += 1 } %>
    
    </table>
<% } else { %>
    <table class="table table-bordered">
        <tr>
            <td>자료 없음</td>
        </tr>
    </table>
<% } %>