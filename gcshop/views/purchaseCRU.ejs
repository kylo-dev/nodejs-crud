<!-- 컴퓨터공학과 201935247 김현겸 -->
<form action="/purchase/detail/<%=list[0].mer_id%>" method="post">
    <table class="table table-bordered">
        <input type="hidden" name="merId" value="<%=list[0].mer_id%>">
        <tr>
            <td rowspan="6" style="width: 65%;">
                <img src="<%=list[0].image%>" alt="Merchandise Image" style="width: 30%;">
            </td>
        </tr>

        <tr>
            <td><%=list[0].name%></td>
        </tr>

        <tr>
            <td>가격: <%=list[0].price %> 원</td>
            <input type="hidden" name="price" value="<%=list[0].price%>">
        </tr>

        <tr>
            <td>브랜드: <%=list[0].brand %></td>
        </tr>

        <tr>
            <td>수량 : <input type="number" name="qty" min="1" max="<%=list[0].stock%>"></td>
        </tr>

        <tr>
            <td>
                <button class="btn btn-outline-primary btn-sm" type="submit">결제</button>
                <button class="btn btn-outline-primary btn-sm">장바구니</button>
            </td>
        </tr>
    </table>
</form>