<form action="/purchase/cart/update_process" method="post">

    <h2 class="fw-bold mb-3">관리자 장바구니 수정</h2>
    <table class="table table-bordered">
        <input type="hidden" name="cartId" value="<%=list[0].cart_id %>">
        <tr>
            <td rowspan="7" style="width: 65%;">
                <img src="<%=list[0].image %>" alt="상품 이미지" style="width: 30%;">
            </td>
        </tr>

        <tr>
            <td>
                상품명 : <%=list[0].name%>
            </td>
        </tr>

        <tr>
            <td>
                구매자 : <%=list[0].loginid %>
            </td>
        </tr>

        <tr>
            <td>
                가격 : <%=list[0].price %>
            </td>
        </tr>

        <tr>
            <td>
                <label for="quantity">수량:</label>
                <input type="number" name="qty" min="1" max="<%=list[0].stock %>" value="<%=list[0].qty %>">
            </td>
        </tr>
        
        <tr>
            <td>
                <button type="submit">장바구니 수정</button>
            </td>
        </tr>
    </table>
</form>