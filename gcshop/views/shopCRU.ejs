<table class="table table-bordered">
    <tr>
        <td rowspan="5" style="width: 65%;">
            <img src="<%=list[0].image%>" alt="Merchandise Image" style="width: 30%;">
        </td>
    </tr>

    <tr>
        <td><%=list[0].name%></td>
    </tr>

    <tr>
        <td>가격: <%=list[0].price %> 원</td>
    </tr>

    <tr>
        <td>브랜드: <%=list[0].brand %></td>
    </tr>

<% if (check === 'y') { %>
    <tr>
        <td>
            <button class="btn btn-outline-primary btn-sm">
                <a href="/purchase/detail/<%=list[0].mer_id%>" class="text-primary">구매</a>
            </button>
            <button class="btn btn-outline-primary btn-sm">
                <a href="/cart/<%=list[0].mer_id%>" class="text-primary">장바구니</a>
            </button>
        </td>
    </tr>
<% } %>

</table>